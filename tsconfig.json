{
  "compilerOptions": {
    "plugins": [
      {
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["esnext", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "jsx": "react",
    "rootDirs": ["src"],
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "build", "lib", "static"]
}
